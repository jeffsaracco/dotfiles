[
    {
        "defaults": {
            "link": {
                "relink": true,
                "create": true,
                "force": true
            }
        }
    },
    {
        "clean": [
            "~"
        ]
    },
    {
        "link": {
            "~/.bin/tmuxinator.zsh": {
                "create": true,
                "path": "home/dotbin/tmuxinator.zsh"
            },
            "~/.config/alacritty": {
                "create": true,
                "path": "home/config/alacritty"
            },
            "~/.config/nvim": {
                "create": true,
                "path": "home/config/nvim"
            },
            "~/.config/tmuxinator": {
                "create": true,
                "path": "home/config/tmuxinator"
            },
            "~/.gitconfig": "home/git/gitconfig",
            "~/.gitignore_global": "home/git/gitignore_global",
            "~/.hyper.js": "home/hyper.js",
            "~/.noti.yaml": "home/noti/noti.yml",
            "~/.p10k.zsh": "home/p10k.zsh",
            "~/.tmux.conf": "home/tmux/tmux.conf",
            "~/.zshrc": "home/zsh/zshrc",
            "~/.tmux/plugins/tpm": "home/tmux/plugins/tpm",
            "~/.oh-my-zsh/custom/plugins": "home/zsh/oh-my-zsh/custom/plugins",
            "~/.oh-my-zsh/themes/powerlevel10k": "home/zsh/oh-my-zsh/custom/themes/powerlevel10k"
        }
    },
    {
        "create": [
            "~/workspace",
            "~/.tmux/"
        ]
    },
    {
        "shell": [
            [
                "git submodule update --init --recursive",
                "Installing submodules"
            ],
            [
                "ZSH= sh -c \"$(curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh)\"",
                "installing oh-my-zsh"
            ]
        ]
    }
]
